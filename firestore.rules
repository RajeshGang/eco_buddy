rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Catalog - read only for authenticated users
    match /catalog/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins should write to catalog
    }
    
    // Leaderboard - read all, write own
    match /leaderboard/{uid} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;
    }
    
    // User purchases - read/write own only
    match /users/{uid}/purchases/{purchase} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
    
    // User receipts - read/write own only
    match /users/{uid}/receipts/{receipt} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
    
    // Score versions - read only
    match /score_versions/{version} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Default deny all other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}