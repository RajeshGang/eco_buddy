rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    match /users/{uid} {
      allow read, write: if isSignedIn() && request.auth.uid == uid;
      match /purchases/{doc} { allow read, write: if isSignedIn() && request.auth.uid == uid; }
      match /aggregates/{col}/{doc} { allow read: if isSignedIn() && request.auth.uid == uid; }
    }
    match /catalog/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    match /score_versions/{id} {
      allow read: if true;
      allow write: if false;
    }
  }
}